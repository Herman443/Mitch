<%= form_with(model: song, local: true) do |form| %>
  <% if song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<font color="#ffffff">
  <div class="field" style="max-width: 400px">
    <h5>Title:</h5>
    <%= form.text_field :title, class: "form-control input-lg" %>
  </div>
</font>
  <br>
  <font color="#ffffff">
  <div class="field" style="max-width: 400px">
    <h5>Artist:</h5>
    <%= form.text_field :artist, class: "form-control input-lg" %>
  </div>
</font>
<br>
<font color="#ffffff">
  <div class="field" style="max-width: 400px">
    <h5>Genre:</h5></font>
    <%= form.select :genre, [["Alternativ rock", "Alternativ rock"],
                            ["Pop", "Pop"],
                            ["Rock", "Rock"],
                            ["Techno", "Techno"],
                            ["Jazz", "Jazz"],
                            ["Classical", "Classical"],
                            ["Rap", "Rap"],
                            ["Hip Hop", "Hip Hop"],
                            ], prompt: "Select genre...", id: :song_genre %>
  </div>
<br>
<font color="#ffffff">
  <div class="field" style="max-width: 400px">
    <h5>Youtube ID (Last part of youtube link, example: PMivT7MJ41M):</h5>
    <%= form.text_field :link, class: "form-control input-lg" %>
  </div>
</font>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
